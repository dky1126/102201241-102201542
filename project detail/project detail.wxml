<view class="container">
  <!-- 项目标题 -->
  <text class="project-title">{{project.title}}</text>

  <!-- 项目负责人信息 -->
  <view class="leader-info">
    <image class="avatar" src="{{project.leader.avatarUrl}}" bindtap="goToChat"></image>
    <text class="nickname" bindtap="goToChat">{{project.leader.nickname}}</text>
  </view>
  <!--项目详情-->
  <text class="detail-label">项目内容：</text>
<!--项目详情框-->
  <view class="project-detail-box">
    <text class="detail-content">{{project.description}}</text>
  </view>
</view>
