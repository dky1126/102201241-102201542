<view class="container">
  <!-- 项目标题 -->
  <text class="project-title">{{project.title}}</text>

  <!-- 项目负责人信息 -->
  <view class="leader-info">
    <text class="nickname">{{project.nickname}}</text>
  </view>

  <!-- 项目描述 -->
  <view class="project-detail-box">
    <text class="detail-content">{{project.description}}</text>
  </view>

  <!-- 按钮区 -->
  <view class="button-container">
    <button class="apply-button" bindtap="applyForProject">申请加入项目</button>
    <button class="chat-button" bindtap="goToChat">进入聊天</button>
  </view>
</view>
