.container {
  padding: 20px;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  font-weight: bold;
  margin-bottom: 5px;
}

.textarea {
  width: 100%;
  height: 100px;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
}

.input {
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
}

.submit-button {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  padding: 10px;
  text-align: center;
}
