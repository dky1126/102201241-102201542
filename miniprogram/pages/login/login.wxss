/* pages/user/user.wxss */

.inputBox {
    width: 70%;
    padding: 6rpx 10rpx;
    margin: 4rpx;
    margin-left: 100rpx;
    box-sizing: border-box;
    border: 1rpx solid #555;
    outline: none;
}

.circleImage{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 100rpx;
    height: 245rpx;
    width: 245rpx;
    border-radius:50%;
}

.welcome-text {
  display: flex;
  justify-content: center;   /* 水平居中 */
  align-items: center;       /* 垂直居中 */
  margin: 20px 0;           /* 上下间距 */
}

.welcome-message {
  font-size: 24px;          /* 字体大小 */
  font-weight: bold;        /* 字体加粗 */
  color: #2c3e50;          /* 字体颜色 */
  text-align: center;       /* 文本居中 */
}
.userNickname {
    margin-top: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: large;
}
.welcome-message1 {
  font-size: 18px;          /* 字体大小 */
  color: #097ef3;          /* 字体颜色 */
  text-align: center;       /* 文本居中 */
}

.label-list{
    display: flex;
    width: 100%;
    height: 120rpx;
    align-items: center;
    border-bottom: 1rpx solid #e8e8e8;
}
.label-list .label {
    color: #333;
    font-size: 36rpx;
    margin-left: 200rpx;
    font-weight: bold;
}
.input-box{
    position: relative;
    left:20px;
}
.place {
    align-items: center;
    font-size: 36rpx;
    left: 30rpx;
    vertical-align:middle;
}

  
.buttonType {
  
    margin-left: 200rpx;
    margin-top: 50rpx;
}

.confirmButtonType {
    margin-left: 200rpx;
    margin-top: 100rpx;
}